        .lightboxcontainer {
            width: 100%;
            text-align: left;
        }

        .lightboxleft {
            width: 40%;
            float: left;
        }

        .lightboxright {
            width: 60%;
            float: left;
        }

            .lightboxright iframe {
                min-height: 390px;
            }

        .divtext {
            margin: 36px;
        }
    </style>
